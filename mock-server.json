{
    "port": "3000",
    "timeout": 300,
    "serveStatic": {
        "enabled": true,
        "endpoints": [
            {
                "urlPrefix": "",
                "indexPages": [
                    "index.html",
                    "index.htm"
                ],
                "dirPath": "./static"
            }
        ]
    },
    "serveApi": {
        "enabled": true,
        "endpoints": [
            {
                "endpoint": "/api",
                "filePath": "./json-api.hbs",
                "options": {}
            }
        ]
    },
    "serveWebsocket": {
        "enabled": true,
        "endpoints": [
            {
                "endpoint": "/ws1",
                "filePath": "./json-ws1.hbs",
                "type": "timer",
                "interval": "500"
            },
            {
                "endpoint": "/ws2",
                "filePath": "./json-ws2.hbs",
                "type": "fileWatcher"
            }
        ],
        "options": {}
    },
    "serveProxy": {
        "enabled": true,
        "endpoints": [
            {
                "endpoint": "/proxy-foo",
                "target": "http://localhost:2999/api/"
            },
            {
                "endpoint": "/proxy-bar",
                "target": "http://localhost:2999",
                "options": {}
            }
        ],
        "options": {}
    },
    "customMiddleware": {
        "front": [],
        "last": []
    }
}